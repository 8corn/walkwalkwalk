<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".markfragment.BookMarkFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:text="@string/bookmark_group" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="394dp"
            android:layout_height="49dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27dp"
            android:background="@drawable/bookmark_background"
            android:backgroundTint="@color/bmk_background"
            android:drawableStart="@drawable/add_circle"
            android:gravity="start|center_vertical"
            android:text="@string/bookmark_add"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:drawablePadding="7sp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookmark_frg_rv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp" />

    </LinearLayout>

</RelativeLayout>